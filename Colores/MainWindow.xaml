<Window x:Class="Colores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:vm="clr-namespace:Colores.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:ColoresViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button  Background="Red" MouseMove="UIElement_OnMouseMove" />
        <Button Grid.Row="0" Grid.Column="1" Background="Yellow"/>
        <Button Grid.Row="1" Grid.Column="0" Background="Blue"/> 
        <Button Grid.Column="1" Grid.Row="1" Background="Green"/>
        <Label Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="2" Content="{Binding ColorName}"
               Foreground="White" FontSize="30" Background="Black" />
    </Grid>
</Window>
